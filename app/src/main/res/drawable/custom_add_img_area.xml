<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F1F5FA" />
            <stroke
                android:color="#79C7DD"
                android:width="2dp"
                android:dashGap="5dp"
                android:dashWidth="7dp" />
            <corners
                android:radius="15dp" />
            <size
                android:width="@dimen/bk_cover_img_width"
                android:height="@dimen/bk_cover_img_height" />
        </shape>
    </item>

    <item
        android:top="130dp"
        android:left="160dp"
        android:bottom="10dp"
        android:right="5dp">
        <bitmap
            android:tint="#447C8C"
            android:src="@drawable/plus_circle"
            android:antialias="true"
            android:gravity="bottom" />
    </item>

</layer-list>