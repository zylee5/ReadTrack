<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".AddBookFragment">


    <TextView
        android:id="@+id/bookNameText"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/book_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bookAuthorText"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_author"
        app:layout_constraintStart_toStartOf="@+id/bookNameText"
        app:layout_constraintTop_toBottomOf="@+id/bookNameTextInput" />

    <TextView
        android:id="@+id/bookGenreText"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_genre"
        app:layout_constraintStart_toStartOf="@+id/bookAuthorText"
        app:layout_constraintTop_toBottomOf="@+id/bookAuthorTextInput" />

    <TextView
        android:id="@+id/startDateText"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starting_date"
        app:layout_constraintStart_toStartOf="@+id/bookGenreText"
        app:layout_constraintTop_toBottomOf="@+id/bookGenreTextInput" />

    <TextView
        android:id="@+id/finishingDateText"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finishing_date"
        app:layout_constraintStart_toStartOf="@+id/startDateText"
        app:layout_constraintTop_toBottomOf="@+id/startDateInput" />

    <TextView
        android:id="@+id/ratingText"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        app:layout_constraintStart_toStartOf="@+id/finishingDateText"
        app:layout_constraintTop_toBottomOf="@+id/finishingDateTextInput" />

    <TextView
        android:id="@+id/statusText"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        app:layout_constraintStart_toStartOf="@+id/ratingText"
        app:layout_constraintTop_toBottomOf="@+id/tempRatingStartsTextInput" />

    <EditText
        android:id="@+id/bookNameTextInput"
        style="@style/edit_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:inputType="textPersonName"
        android:text="@string/name"
        app:layout_constraintBaseline_toBaselineOf="@+id/bookNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bookNameText" />

    <EditText
        android:id="@+id/bookAuthorTextInput"
        style="@style/edit_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/author"
        app:layout_constraintBaseline_toBaselineOf="@+id/bookAuthorText"
        app:layout_constraintEnd_toEndOf="@+id/bookNameTextInput"
        app:layout_constraintStart_toEndOf="@+id/bookAuthorText" />

    <EditText
        android:id="@+id/bookGenreTextInput"
        style="@style/edit_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/genre"
        app:layout_constraintBaseline_toBaselineOf="@+id/bookGenreText"
        app:layout_constraintEnd_toEndOf="@+id/bookAuthorTextInput"
        app:layout_constraintStart_toEndOf="@+id/bookGenreText" />

    <EditText
        android:id="@+id/startDateInput"
        style="@style/edit_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="@string/start_date"
        app:layout_constraintBaseline_toBaselineOf="@+id/startDateText"
        app:layout_constraintEnd_toEndOf="@+id/bookGenreTextInput"
        app:layout_constraintStart_toEndOf="@+id/startDateText" />

    <EditText
        android:id="@+id/finishingDateTextInput"
        style="@style/edit_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="@string/finish_date"
        app:layout_constraintBaseline_toBaselineOf="@+id/finishingDateText"
        app:layout_constraintEnd_toEndOf="@+id/startDateInput"
        app:layout_constraintStart_toEndOf="@+id/finishingDateText" />

    <EditText
        android:id="@+id/tempRatingStartsTextInput"
        style="@style/edit_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/temp_rating_stars"
        app:layout_constraintBaseline_toBaselineOf="@+id/ratingText"
        app:layout_constraintEnd_toEndOf="@+id/finishingDateTextInput"
        app:layout_constraintStart_toEndOf="@+id/ratingText" />

    <Spinner
        android:id="@+id/statusSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/status_array"
        app:layout_constraintBaseline_toBaselineOf="@+id/statusText"
        app:layout_constraintEnd_toEndOf="@+id/tempRatingStartsTextInput"
        app:layout_constraintStart_toEndOf="@+id/statusText" />

</androidx.constraintlayout.widget.ConstraintLayout>